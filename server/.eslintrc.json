{
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "plugins": ["node", "promise", "prettier"],
    "rules": {
      "no-console": "off",
      "import/no-extraneous-dependencies": "off",
      "func-names": "off",
      "no-plusplus": "off"
    },
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    }
  }